{
    "name": "trinity/framework",
    "description": "Trinity Framework",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
      {
        "name": "Tomáš Jančar",
        "email": "jancar@modpreneur.com",
        "role": "Lead Developer"
      }
    ],
    "require": {
      "php": ">=7",
      "symfony/symfony": "~2.8 | ~3.0",
      "symfony/form" : "~3.0",
      "friendsofsymfony/user-bundle": "dev-master",
      "knplabs/doctrine-behaviors": "~1.2",
      "doctrine/orm": "~2.5",
      "doctrine/doctrine-bundle": "~1.6",
      "doctrine/data-fixtures": "~1",
      "doctrine/doctrine-fixtures-bundle": "~2",
      "symfony/monolog-bundle": "~2.8",
      "aws/aws-sdk-php": "~3.11",
      "egulias/email-validator": "~1.2",

      "trinity/core-entities": "dev-master",
      "trinity/core-interfaces": "dev-master",
      "trinity/settings": "~1.1",
      "trinity/logger": "dev-master",
      "trinity/search": "dev-master",
      "trinity/utils": "dev-master"
    },

    "require-dev": {
      "sensio/generator-bundle": "~3.0",
      "phpunit/phpunit": "~5.0",
      "braincrafted/testing-bundle": "@stable"
    },

    "autoload": {
      "classmap": ["FrameworkBundle/"]
    },

    "minimum-stability": "stable",
    "extra": {
      "branch-alias": {
        "dev-master": "1.0-dev"
      }
    },


    "scripts": {
      "post-update-cmd": [
        "php FrameworkBundle/Tests/app/console.php doctrine:schema:update --force"
      ],
      "post-install-cmd": [
        "php FrameworkBundle/Tests/app/console.php doctrine:schema:update --force"
      ]
    }
}
